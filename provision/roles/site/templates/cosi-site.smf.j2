<?xml version="1.0"?>
<!DOCTYPE service_bundle SYSTEM "/usr/share/lib/xml/dtd/service_bundle.dtd.1">
<service_bundle type="manifest" name="application-circonus-cosi-site" >
    <service name="application/circonus/cosi-site" type="service" version="1" >
        <create_default_instance enabled="true" />
        <dependency name="dep0" grouping="require_all" restart_on="error" type="service" >
            <service_fmri value="svc:/milestone/multi-user:default" />
        </dependency>
        <exec_method type="method" name="start" exec="{{ node_bin }} cosi-site.js &amp;" timeout_seconds="10" >
            <method_context working_directory="{{ cosi_directory }}" >
            </method_context>
        </exec_method>
        <exec_method type="method" name="stop" exec=":kill" timeout_seconds="30" />
        <template >
            <common_name >
                <loctext xml:lang="C" >Circonus One Step Install Site</loctext>
            </common_name>
        </template>
    </service>
</service_bundle>
